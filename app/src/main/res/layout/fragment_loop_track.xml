<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="skot.sensormadness.LoopTrackFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@color/colorAccent"
        android:visibility="visible"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/recButton"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimary"
            android:text="REC"
            android:tag="recButton"/>

        <Button
            android:id="@+id/playButton"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimary"
            android:text="PLAY"
            android:tag="playButton"/>

        <SeekBar
            android:layout_width="300sp"
            android:layout_height="50sp"
            android:layout_margin="10sp"
            android:id="@+id/speedAdjust"
            android:tag="speedAdjust"
            android:background="@color/colorPrimary"
            android:progress="100"
            android:max="200"
            />

        <Switch
            android:id="@+id/loopSwitch"
            android:tag="loopSwitch"
            android:text="LOOP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textColorHighlight="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/loopMarkers">

            <EditText

                android:id="@+id/loopStart"
                android:text="0"
                android:inputType="number"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@color/white"
/>
            <EditText
                android:id="@+id/loopEnd"
                android:inputType="number"
                android:text="50000"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@color/white"/>

            <skot.sensormadness.DataGraphView
                android:id="@+id/dataGraph"
                android:layout_width="200sp"
                android:layout_height="75sp">
            </skot.sensormadness.DataGraphView>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>
