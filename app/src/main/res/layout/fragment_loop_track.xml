<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="skot.sensormadness.LoopTrackFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/recButton"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimary"
            android:tag="recButton"
            android:text="REC" />

        <Button
            android:id="@+id/playButton"
            android:layout_width="75sp"
            android:layout_height="75sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimary"
            android:tag="playButton"
            android:text="PLAY" />

        <Spinner
            android:id="@+id/seekBarModeSpinner"
            android:tag="seekBarMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>

        <SeekBar
            android:id="@+id/speedAdjust"
            android:layout_width="300sp"
            android:layout_height="50sp"
            android:layout_margin="10sp"
            android:background="@color/colorPrimary"
            android:max="100"
            android:progress="50"
            android:tag="speedAdjust" />

        <Switch
            android:id="@+id/loopSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:tag="loopSwitch"
            android:text="LOOP"
            android:textColorHighlight="@color/colorPrimaryDark" />


        <skot.sensormadness.DataGraphView
            android:id="@+id/dataGraph"
            android:layout_width="200sp"
            android:layout_height="75sp">
        </skot.sensormadness.DataGraphView>


    </LinearLayout>


</FrameLayout>
