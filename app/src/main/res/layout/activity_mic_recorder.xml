<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mic_recorder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="skot.sensormadness.MicRecorder">

    <Button
        android:text="RECORD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="40dp"
        android:id="@+id/btnRecordSound" 
        android:onClick="recStart"/>

    <Button
        android:text="PLAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnRecordSound"
        android:layout_alignStart="@+id/btnRecordSound"
        android:layout_marginTop="27dp"
        android:id="@+id/btnPlaySound"
        android:onClick="playStart"/>

    <Button
        android:text="REC STOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnRecordSound"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnRecStop"
        android:clickable="false"
        android:onClick="recStop"/>

    <Button
        android:text="PLAY STOP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPlaySound"
        android:layout_alignStart="@+id/btnRecStop"
        android:id="@+id/btnPlayStop"
        android:clickable="false"
        android:onClick="playStop"/>
</RelativeLayout>
